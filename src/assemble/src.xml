<assembly>
  <id>src</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <moduleSets>
    <!-- Binaries -->
    <moduleSet>
      <includes>
        <include>uk.ac.ed.ph.jacomax:jacomax</include>
        <include>uk.ac.ed.ph.jacomax:jacomax-samples</include>
      </includes>
      <binaries>
        <outputDirectory>bin</outputDirectory>
        <includeDependencies>true</includeDependencies>
        <dependencySets>
          <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
          </dependencySet>
        </dependencySets>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <!-- Include README.txt and other stuff at top level -->
    <fileSet>
      <directory>${project.basedir}</directory>
      <includes>
        <include>LICENSE.txt</include>
        <include>README.txt</include>
        <include>jacomax.properties.sample</include>
      </includes>
    </fileSet>
    <!-- Put rest of project source in 'src' container directory -->
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>src</outputDirectory>
      <excludes>
        <exclude>target/**</exclude>
        <exclude>jacomax/target/**</exclude>
        <exclude>jacomax-samples/target/**</exclude>
        <exclude>LICENSE.txt</exclude>
        <exclude>README.txt</exclude>
        <exclude>jacomax.properties.sample</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
