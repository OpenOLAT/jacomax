<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>uk.ac.ed.ph.jacomax:jacomax</include>
        <include>uk.ac.ed.ph.jacomax:jacomax-samples</include>
      </includes>
      <binaries>
        <includeDependencies>true</includeDependencies>
        <dependencySets>
          <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
          </dependencySet>
        </dependencySets>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <includes>
        <include>LICENSE.txt</include>
        <include>README.txt</include>
        <include>jacomax.properties.sample</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
